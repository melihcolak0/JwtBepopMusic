@model AdminDashboardViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="home-tab">
            <div class="tab-content tab-content-basic">
                <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="statistics-details d-flex align-items-center justify-content-between flex-wrap">

                                <!-- Toplam Kullanıcı Sayısı -->
                                <div class="statistic-widget text-center m-2 p-3 rounded shadow-sm bg-primary text-white flex-fill" style="min-width: 180px;">
                                    <div class="icon mb-2"><i class="mdi mdi-account-multiple-outline mdi-36px"></i></div>
                                    <p class="statistics-title text-white">Toplam Kullanıcı</p>
                                    <h3 class="rate-percentage text-white">@Model.TotalUsers</h3>
                                </div>

                                <!-- Toplam Şarkı Sayısı -->
                                <div class="statistic-widget text-center m-2 p-3 rounded shadow-sm bg-success text-white flex-fill" style="min-width: 180px;">
                                    <div class="icon mb-2"><i class="mdi mdi-music-note-outline mdi-36px"></i></div>
                                    <p class="statistics-title text-white">Toplam Şarkı</p>
                                    <h3 class="rate-percentage">@Model.TotalSongs</h3>
                                </div>

                                <!-- Toplam Dinlenme Sayısı -->
                                <div class="statistic-widget text-center m-2 p-3 rounded shadow-sm bg-warning text-white flex-fill" style="min-width: 180px;">
                                    <div class="icon mb-2"><i class="mdi mdi-playlist-play mdi-36px"></i></div>
                                    <p class="statistics-title text-white">Toplam Dinlenme</p>
                                    <h3 class="rate-percentage">@Model.TotalListening</h3>
                                </div>

                                <!-- En Çok Dinlenen Şarkı -->
                                <div class="statistic-widget text-center m-2 p-3 rounded shadow-sm bg-danger text-white flex-fill" style="min-width: 180px;">
                                    <div class="icon mb-2"><i class="mdi mdi-star-outline mdi-36px"></i></div>
                                    <p class="statistics-title text-white">En Çok Dinlenen Şarkı</p>
                                    <h3 class="rate-percentage" style="font-size: 1rem;">@Model.MostListenedSong</h3>
                                </div>

                                <!-- Toplam Sanatçı Sayısı -->
                                <div class="statistic-widget text-center m-2 p-3 rounded shadow-sm bg-info text-white flex-fill" style="min-width: 180px;">
                                    <div class="icon mb-2"><i class="mdi mdi-account-music mdi-36px"></i></div>
                                    <p class="statistics-title text-white">Toplam Sanatçı</p>
                                    <h3 class="rate-percentage">@Model.Artists.Count</h3>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-8 d-flex flex-column">
                            <div class="row flex-grow">
                                <div class="col-12 grid-margin stretch-card">
                                    <div class="card card-rounded">
                                        <div class="card-body">
                                            <div class="d-sm-flex justify-content-between align-items-start">
                                                <div>
                                                    <h4 class="card-title card-title-dash">Aylık Dinlenme İstatistikleri</h4>
                                                    <p class="card-subtitle card-subtitle-dash">Her ay dinlenen toplam şarkı sayısı</p>
                                                </div>
                                            </div>
                                            <div class="chartjs-bar-wrapper mt-3" style="height: 400px;">
                                                <canvas id="monthlyListeningChart"></canvas>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>                           
                        </div>
                        <div class="col-lg-4 d-flex flex-column">
                            <div class="row flex-grow">
                                <div class="col-12 grid-margin stretch-card">
                                    <div class="card card-rounded">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                                        <h4 class="card-title card-title-dash">Türe Göre Dinlenme Sayısı</h4>
                                                    </div>
                                                    <div>
                                                        <canvas id="doughnutChart"></canvas>
                                                    </div>
                                                    <div id="doughnutChart-legend" class="mt-5 text-center"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 grid-margin stretch-card">
                            <div class="card card-rounded">
                                <div class="card-body">
                                    <div class="d-sm-flex justify-content-between align-items-start mb-3">
                                        <h4 class="card-title card-title-dash">En Popüler Şarkılar</h4>
                                    </div>
                                    <div class="table-responsive mt-1">
                                        <table class="table select-table">
                                            <thead>
                                                <tr>
                                                    <th>Şarkı</th>
                                                    <th>Süre</th>
                                                    <th>Tür</th>
                                                    <th>Çıkış Tarihi</th>
                                                    <th>Şarkıyı Çal</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.MostPopularSongs)
                                                {
                                                    <tr>
                                                        <td>
                                                            <div class="d-flex">
                                                                <img src="@item.CoverImageUrl" alt="" style="width:50px; height:50px; object-fit:cover; margin-right:10px;">
                                                                <div>
                                                                    <h6>@item.Title</h6>
                                                                    <p>@item.Artist</p>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <h6>@(((TimeSpan)item.Duration).ToString(@"mm\:ss"))</h6>
                                                        </td>
                                                        <td>
                                                            <div class="badge badge-opacity-success">@item.Genre</div>
                                                        </td>
                                                        <td>
                                                            <div class="badge badge-opacity-warning">@item.ReleaseDate.ToString("dd MMM yyyy")</div>
                                                        </td>
                                                        <td>
                                                            <audio id="audio-@item.Id" src="@item.DataSourceUrl"></audio>
                                                            <button class="btn btn-sm btn-info" onclick="playAudio('@item.Id')">
                                                                <i class="mdi mdi-play"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', async () => {
        try {
            const response = await fetch('https://localhost:7157/api/UserSongHistory/GetMonthlyListeningStats');
            if (!response.ok) throw new Error('API hatası');
            const data = await response.json();

            const ctx = document.getElementById('monthlyListeningChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Ocak','Şubat','Mart','Nisan','Mayıs','Haziran','Temmuz','Ağustos','Eylül','Ekim','Kasım','Aralık'],
                    datasets: [{
                        label: 'Dinlenme Sayısı',
                        data: data,
                        backgroundColor: '#4c84ff',
                        borderRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: { mode: 'index', intersect: false }
                    },
                    scales: {
                        y: { beginAtZero: true }
                    }
                }
            });
        } catch (err) {
            console.error('Grafik yüklenemedi:', err);
        }
    });

    document.addEventListener('DOMContentLoaded', async () => {
        try {
            const response = await fetch('https://localhost:7157/api/UserSongHistory/GetTypeByAmount');
            if (!response.ok) throw new Error('API hatası');
            const data = await response.json();

            const labels = data.map(d => d.genre);
            const counts = data.map(d => d.count);

            const ctx = document.getElementById('doughnutChart').getContext('2d');
            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
                    datasets: [{
                        data: counts,
                        backgroundColor: [
                            '#4c84ff', '#29cc97', '#8061ef', '#ffa426', '#f5365c',
                            '#2dce89', '#11cdef', '#fb6340', '#f4f5f7', '#172b4d'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { display: true, position: 'bottom' },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.raw || 0;
                                    return `${label}: ${value} dinlenme`;
                                }
                            }
                        }
                    }
                }
            });
        } catch (err) {
            console.error('Grafik yüklenemedi:', err);
        }
    });
</script>

<script>
    function playAudio(id) {
        const audio = document.getElementById(`audio-${id}`);
        if (audio.paused) {
            audio.play();
        } else {
            audio.pause();
        }
    }
</script>