@model PagedResultDto<ResultUserSongHistoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int a = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kullanıcı - Şarkı Geçmişinin Listelenmesi</h4>
                <p class="card-description">
                    Kullanıcı - Şarkı geçmişlerinin listeleme, ekleme, silme ve güncelleme işlemlerini buradan gerçekleştirebilirsiniz.
                </p>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> Id </th>
                                <th> Kullanıcı </th>
                                <th> Şarkı </th>
                                <th> Dinlenme Sayısı </th>
                                <th> Son Dinlenme Tarihi </th>
                                <th> Sil </th>
                                <th> Güncelle </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                a++;
                                <tr>
                                    <td> @a </td>
                                    <td> @item.UserNameSurname </td>
                                    <td> @item.SongArtist - @item.SongName </td>
                                    <td> @item.ListenCount </td>
                                    <td> @item.LastListened.ToString("dd MMM yy - HH:mm") </td>
                                    <td> <a href="/AdminUserSongHistory/DeleteUserSongHistory/@item.Id" class="btn btn-danger btn-rounded btn-fw">Sil</a> </td>
                                    <td> <a href="/AdminUserSongHistory/UpdateUserSongHistory/@item.Id" class="btn btn-warning btn-rounded btn-fw">Güncelle</a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a href="/AdminUserSongHistory/CreateUserSongHistory" class="btn btn-primary btn-rounded btn-fw">Yeni Kullanıcı - Şarkı Geçmişi Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mt-3">
   
    <nav aria-label="Page navigation">
        <ul class="pagination mb-0">
            @if (Model.Page > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(Model.Page - 1)&pageSize=@Model.PageSize">&laquo;</a>
                </li>
            }

            @{
                int startPage = Math.Max(1, Model.Page - 2);
                int endPage = Math.Min(Model.TotalPages, startPage + 4);
                if (endPage - startPage < 4)
                {
                    startPage = Math.Max(1, endPage - 4);
                }
            }

            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link" href="?page=@i&pageSize=@Model.PageSize">@i</a>
                </li>
            }

            @if (Model.Page < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(Model.Page + 1)&pageSize=@Model.PageSize">&raquo;</a>
                </li>
            }
        </ul>
    </nav>

    <form method="get" class="d-inline">
        <select name="pageSize" class="form-select d-inline w-auto" onchange="this.form.submit()">
            <option value="10" selected="@(Model.PageSize == 10 ? "selected" : null)">10</option>
            <option value="20" selected="@(Model.PageSize == 20 ? "selected" : null)">20</option>
            <option value="50" selected="@(Model.PageSize == 50 ? "selected" : null)">50</option>

        </select>
        <input type="hidden" name="page" value="@Model.Page" />
    </form>
</div>
