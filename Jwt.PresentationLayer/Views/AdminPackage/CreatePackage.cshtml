@model CreatePackageDto

@{
    ViewData["Title"] = "CreatePackage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">    
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Paket Ekleme</h4>
                <p class="card-description"> Paket ekleme işlemini buradan gerçekleştirebilirsiniz. </p>
                <form method="post" class="forms-sample">
                    <div class="form-group">       
                        <label>Paket Adı</label>
                        <input type="text" class="form-control" asp-for="Name">
                    </div>
                    <div class="form-group">     
                        <label>Fiyat</label>
                        <input type="text" class="form-control" asp-for="Price">
                    </div>      
                    <div class="form-group">
                        <label>Açıklama</label>                       
                        <textarea class="form-control" asp-for="Description" style="height:120px"></textarea>        
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Ekle</button>                    
                    <a href="/AdminPackage/Index" class="btn btn-light">İptal Et</a>
                </form>
            </div>
        </div>
    </div>
</div>
