@model List<ResultSongDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div id="main" class="layout-row flex">
    <!-- ############ Content START-->
    <div id="content" class="flex ">
        <!-- ############ Main START-->
        <div>
            <div class="page-content page-container" id="page-content">
                <div class="padding sr" id="list" data-plugin="list">
                    <div class="page-hero">
                        <div class="media bg-media">
                            <div class="media-content" style="background-image:url(/Images/img/b19.jpg)">
                            </div>
                        </div>
                        <div class="pos-rlt">
                            <h2 class="display-3 font-weight-bold text-white">Müziğini Keşfet: Türlere Göre</h2>
                        </div>
                    </div>
                    <div class="pos-rlt">
                        <div class="py-5">
                           @*  <div class="heading pt-5 pb-3 d-flex ">
                                <div>
                                    <div class="text-muted sr-item"></div>
                                    <h5 class="text-highlight sr-item">Türlere Göre Filtreleme</h5>
                                </div>
                                <span class="flex"></span>
                            </div> *@
                            <div class="py-2 d-flex sr-item" id="filter-tur">
                                <div class="no-shrink my-2">Türler</div>
                                <div class="mx-3">
                                    @foreach (var genre in (List<string>)ViewBag.Genres)
                                    {
                                        <a asp-action="Index" asp-route-genre="@genre"
                                           class="btn btn-sm @(ViewBag.SelectedGenre == genre ? "btn-primary" : "btn-white") m-1">
                                            @genre
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row row-lg list hide">
                            @foreach (var item in Model)
                            {
                                <div class="col-6 col-sm-4 col-md-3 col-lg-2" data-id="@item.Id" data-tur="@item.Genre" data-tag="USA" data-source="@item.DataSourceUrl">
                                    <div class="list-item list-hover r mb-5">
                                        <div class="media ">
                                            <a href="/Genres/GetSongById/@item.Id" class="ajax media-content " style="background-image:url(@item.CoverImageUrl)">
                                            </a>
                                            <div class="media-action media-action-overlay">
                                                <button class="btn btn-icon no-bg no-shadow hide-row" data-toggle-class>
                                                    <i data-feather="heart" class="active-fill"></i>
                                                </button>
                                                <button type="button" class="btn btn-raised btn-icon btn-rounded bg--white btn-play" onclick="increaseListen(@item.Id)"></button>
                                                <button class="btn btn-icon no-bg no-shadow hide-row btn-more" data-toggle="dropdown">
                                                    <i data-feather="more-horizontal"></i>
                                                </button>
                                                <div class="dropdown-menu dropdown-menu-right"></div>
                                            </div>
                                        </div>
                                        <div class="list-content text-center">
                                            <div class="list-body ">
                                                <a href="/Genres/GetSongById/@item.Id" class="list-title title ajax h-1x">
                                                    @item.Title
                                                </a>
                                                <a href="/Artists/GetArtistByName?artist=@item.Artist" class="list-subtitle d-block text-muted h-1x subtitle ajax ">
                                                    @item.Artist
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="no-result hide">
                            <div class="p-5 text-center">
                                <h5>Hiçbir şey bulunamadı</h5>
                                <small>Aradığınızı bulamıyoruz.</small>
                            </div>
                        </div>
                        <div class="d-flex py-3 justify-content-center">
                            <ul class="pagination pagination-sm"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ############ Main END-->
    </div>
    <!-- ############ Content END-->
</div>

